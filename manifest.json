{
  "manifest_version": 3,
  "name": "Dog Corner",
  "version": "0.1.0",
  "description": "右下に好きな画像を常駐表示します",
  "permissions": ["storage"],
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

